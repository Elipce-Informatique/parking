@require 'variables.styl'

/*
|--------------------------------------------------------------------------
| Variables GÉNÉRALES
|--------------------------------------------------------------------------
*/
c_noir_bootstrap = #333
c_line_selected = #00639B

/*
|--------------------------------------------------------------------------
| Variables MENU & BANDEAU
|--------------------------------------------------------------------------
*/
c_gris_sidebar = #f3f3f3
c_bleu_menu_left = #337ab7
c_bordure_grise = #dddddd

/*
|--------------------------------------------------------------------------
| Template bootstrap
|--------------------------------------------------------------------------
*/
html,body {
  height:100%;
}
/* Move down content because we have a fixed navbar that is 50px tall */
body
  padding-top 50px

.sub-header
  padding-bottom 10px
  border-bottom 1px solid #eee

/* Top navigation: Hide default border to remove 1px line. */
.navbar-fixed-top
  border 0

/* Main content */
@media (min-width: 768px)
  .main
    padding-right 40px
    padding-left 40px


/*Sidebar: Hide for mobile, show later*/
.sidebar
  display none

@media (min-width: 768px)
  .sidebar
    position fixed !important
    top 51px
    bottom 0
    left 0
    z-index 1000
    display block
    padding 20px
    overflow-x hidden
    overflow-y auto
    border-right 1px solid #ddd
    background-color c_gris_sidebar


/* Scrollable contents if viewport is shorter than content */
/*Sidebar navigation*/
.sidebar-accordion
  margin-bottom 20px

#menu-left .panel-group .panel+.panel
  margin-top -1px

/* MENU LEFT */
.glyphicon
  margin-right: 10px

.sidebar .panel-body
  padding: 0px

.panel-body table tr td
  padding-left: 15px

.panel-body .table
  margin-bottom: 0px

.panel-heading h4
  color c_noir_bootstrap

.panel-heading h4 .glyphicon
  color c_noir_bootstrap

#menu-left
  padding 0px
  padding-top 5px

#menu-left .table>tbody:first-child>td
  border-top none

/*
|--------------------------------------------------------------------------
| Classes Elipce generales
|--------------------------------------------------------------------------
*/
.row_selected td
  color #AAAAAA;
  background-color #EEEEEE;

.bandeau
  padding 5px
  background-color c_gris_sidebar
  border-bottom 1px solid #ddd

.glyphicon
  font-size 15px

.input-group-addon .glyphicon
  margin-right: 0px;

.titre-bandeau h1, .titre-bandeau h2, .titre-bandeau h3, .titre-bandeau h4, .titre-bandeau h5, .titre-bandeau h6
  margin-top 5px
  margin-bottom 5px
  font-weight bold
  display inline-block

.titre-bandeau-icon
  width 40px

.retour-bandeau .glyphicon
  margin-right 10px
  margin-left 10px
  margin-top 2px;

.notifyjs-margetop
  margin-top: 50px;

input[type=number]:invalid {
    border-color: #A94442;
}

.hand-over:hover{
  cursor: pointer;
}
/*
|--------------------------------------------------------------------------
| Bouton upload
|--------------------------------------------------------------------------
*/
.fileUpload {
  position: relative;
  overflow: hidden;
  height: 32px;
  margin-top: 5px;
  margin-bottom: 5px;
}
.fileUpload input.upload {
  position: absolute;
  top: 0;
  right: 0;
  margin: 0;
  padding: 0;
  font-size: 22px;
  cursor: pointer;
  opacity: 0;
  filter: unquote("alpha(opacity=0)")
}
/*
|--------------------------------------------------------------------------
| Collapse sidebar
|--------------------------------------------------------------------------
*/

/* ---------- MODE LEFT ---------- */
.collapse-sidebar-left{
  margin-left: -1px!important;
  padding-right: 25px!important;
  padding-left: 0px!important;
}
.collapse-collapsed{
  margin-left: 0px!important;
  padding-right: 0px!important;
}
.collapse-sidebar-left .sidebar-content{
  padding: 15px;
  background-color: c_gris_sidebar;
  border: 1px solid c_bordure_grise;
  border-bottom-right-radius: 10px;
}
/* La rotation initiale se fait sur un div de largeur 0px
Donc la translation n'affecte pas la position du couton
Ce qui n'est pas le cas du mode "déplié" pour lequel le div
fait toute la largeur du bloc de sidebar */
.collapse-sidebar-left .vertical-text{
  transform: rotate(90deg) translate(100%, 0);
  transform-origin: bottom right;
}

/* ---------- MODE RIGHT ---------- */
.collapse-sidebar-right .sidebar-content{
  padding: 15px;
  background-color: c_gris_sidebar;
  border: 1px solid c_bordure_grise;
  border-bottom-left-radius: 10px;
}

/*.collapse-sidebar-right .vertical-text{*/
  /*width: 0px !important;*/
/*}*/
.collapse-sidebar-right .vertical-text{
  transform:rotate(-90deg) translateX(-100%);
  transform-origin: bottom left;
  text-align: right;
  display: inline-block
}

.collapse-row{
  overflow: hidden;
}
/*
|--------------------------------------------------------------------------
| ANIMATIONS CSS REACT
|--------------------------------------------------------------------------
*/
.tabprofil-enter {
  opacity: 0.01;
  transition: opacity .2s ease-in;
}

.tabprofil-enter.tabprofil-enter-active {
  opacity: 1;
}

.tabprofil-leave {
  opacity: 1;
  transition: opacity .2s ease-in;
}

.tabprofil-leave.tabprofil-leave-active {
  opacity: 0.01;

}