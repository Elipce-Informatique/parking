@import 'variables.styl'

.row_reporting > .col-md-4 {
  padding: 0 !important;
}

.row_reporting > .col-md-4:first-child, .row_temps_reel > .col-md-12 {
  padding-left: 5px !important;
}

.row_reporting > .col-md-4:last-child, .row_temps_reel > .col-md-12 {
  padding-right: 5px !important;
}

.row_reporting .label {
  font-size: 95%;
}

.row-label > div {
  padding: 0;
}

.row-label > div:first-child {
  padding-left: 2px;
}

.row-label > div:last-child {
  padding-left: 5px;
}

.progress-bar span {
  font-weight: bold !important;
  font-size: 115% !important;
}

.collapse-sidebar-right .sidebar-content{
  padding-top: 5px;
}

.collapse-sidebar-right .sidebar-content .row_temps_reel{
  padding-top: 0px;
}