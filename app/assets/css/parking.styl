@font-face {
  font-family: 'Digital-7';
  src: url('./fonts/digital-7 (mono).eot');
  src: url('./fonts/digital-7 (mono).eot?#iefix') format('embedded-opentype'),
  url('./fonts/digital-7 (mono).ttf') format('truetype'),
  url('./fonts/digital-7 (mono).svg#Digital-7') format('svg');
}

@import 'variables.styl'

.row_reporting .panel-tab-bord, .row_reporting .col-logos {
  padding: 0 !important;
}

.row_reporting .panel-tab-bord:first-child, .row_temps_reel > .col-md-12 {
  padding-left: 5px !important;
}

.row_temps_reel > .col-md-12, .row_reporting .col-logos {
  padding-right: 5px !important;
}

.col-logos .panel-body {
  padding: 0 !important;
}

.col-logos > div {
  display: flex;
  align-items: center;
  justify-content: center;
}

.img-parking-supervision {
  display: inline-block;
  vertical-align: middle;
}

.row_reporting .label {
  font-size: 95% !important;
}

.row-label > div {
  padding: 0;
}

.row-label > div:first-child {
  padding-left: 2px;
}

.row-label > div:last-child {
  padding-left: 5px;
}

.badge-stats, .progress-bar span {
  font-weight: bold !important;
  font-size: 115% !important;
}

.badge-stats {
  padding: 2px !important;
}

.collapse-sidebar-right .sidebar-content {
  padding-top: 5px;
}

.collapse-sidebar-right .sidebar-content .row_temps_reel {
  padding-top: 0px;
}

.afficheur_label {
  background-color: #000000;
  color: red;
  font-family: 'Digital-7', sans-serif;
  font-weight: bolder;
  font-size: 18px;
}

.afficheur-libelle {
  font-family: "Arial Black", Gadget, sans-serif;
  font-size: 12px;
}